
<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t('admin.index.title', scope: 'decidim.verifications.csv_email') %>
    </h2>
  </div>
  <div class="card-section">
    <% if @status.count > 0 %>
      <p><%= t('decidim.verifications.csv_email.admin.index.data', count: @status.count,
        due_date: l(@status.last_import_at, format: :long)) %>
      </p>
      <%= link_to t('decidim.verifications.csv_email.admin.destroy.title'),
        destroy_all_csv_verifications_path,
        method: :delete,
        class: 'button alert',
        data: { confirm: t('decidim.verifications.csv_email.admin.destroy.confirm') } %>
      <% else %>
        <p><%= t('admin.index.empty', scope: 'decidim.verifications.csv_email') %></p>
    <% end %>
  </div>
</div>

<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t('admin.new.title', scope: 'decidim.verifications.csv_email') %>
    </h2>
  </div>
  <div class="card-section">
    <p><%= t('decidim.verifications.csv_email.admin.new.info') %></p>
    <%= form_tag csv_verifications_path, multipart: true, class: 'form' do %>
      <%= label_tag :name, t('admin.new.file', scope: 'decidim.verifications.csv_email') %>
      <%= file_field_tag :file %>
      <%= submit_tag t('admin.new.submit', scope: 'decidim.verifications.csv_email'), class: 'button' %>
    <% end %>
  </div>
</div>
